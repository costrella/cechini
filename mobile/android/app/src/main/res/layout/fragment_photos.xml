<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/photo_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="APARAT"
        android:layout_margin="20dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/photo_iv1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/photo_iv1" />

    <Button
        android:id="@+id/photo_media_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:text="GALERIA"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/photo_btn1"
        app:layout_constraintTop_toBottomOf="@+id/photo_btn1" />

    <Button
        android:id="@+id/photo_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="APARAT"
        android:layout_margin="20dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/photo_iv2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/photo_iv2" />

    <Button
        android:id="@+id/photo_media_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:text="GALERIA"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/photo_btn2"
        app:layout_constraintTop_toBottomOf="@+id/photo_btn2" />

    <Button
        android:id="@+id/photo_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="APARAT"
        android:layout_margin="20dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/photo_iv3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/photo_iv3" />

    <Button
        android:id="@+id/photo_media_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:text="GALERIA"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/photo_btn3"
        app:layout_constraintTop_toBottomOf="@+id/photo_btn3" />

    <ImageView
        android:id="@+id/photo_iv1"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toTopOf="@+id/photo_iv2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/photo_btn1"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars[0]" />


    <ImageView
        android:id="@+id/photo_iv2"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toTopOf="@+id/photo_iv3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/photo_btn2"
        app:layout_constraintTop_toBottomOf="@+id/photo_iv1"
        tools:srcCompat="@tools:sample/avatars[0]" />

    <ImageView
        android:id="@+id/photo_iv3"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/photo_btn3"
        app:layout_constraintTop_toBottomOf="@+id/photo_iv2"
        tools:srcCompat="@tools:sample/avatars[0]" />
</androidx.constraintlayout.widget.ConstraintLayout>